{
  "name": "bible-api-dbt-server",
  "version": "1.0.0",
  "description": "Bible API server that relies on the Digital Bible Toolkit from www.digitalbibleplatform.com",
  "author": "Daniel Lewis BSc(Hons)",
  "main": "bibleServer.js",
  "private": true,
  "scripts": {
    "preinstall": "npm list -g nodemon || npm i -g nodemon",
    "postinstall": "test -d .git && cp gitHookPrePush.sh .git/hooks/pre-push || true",
    "start": "nodemon bibleServer.js",
    "forever": "npm list -g forever && forever start -a -l bible.log -o fout.log -e ferr.log bibleServer.js || echo Please install forever globally",
    "test": "./node_modules/.bin/istanbul cover -x \"**/*.spec.js\" ./node_modules/mocha/bin/_mocha -- js routes",
    "enforcer": "./node_modules/.bin/istanbul check-coverage --statement 100 --branch 100 --function 100 --line 100",
    "build": "npm-run-all test enforcer",
    "ncu": "ncu"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "express-validation": "^1.0.1",
    "joi": "^10.0.2",
    "lodash": "^4.17.2",
    "moment": "^2.17.0",
    "request": "^2.79.0",
    "request-promise": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "data-driven": "^1.2.1",
    "eslint": "^3.11.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nock": "^9.0.2",
    "npm-check-updates": "^2.8.7",
    "npm-run-all": "^4.0.1",
    "supertest": "^2.0.1"
  },
  "engine": "node >= 6.9.4"
}
