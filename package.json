{
  "name": "auth-server",
  "version": "1.0.0",
  "description": "JWT auth server",
  "author": "Daniel Lewis BSc(Hons)",
  "main": "authServer.js",
  "private": true,
  "scripts": {
    "start": "nodemon authServer.js",
    "forever": "pm2 start pm2.yaml",
    "test": "./node_modules/.bin/istanbul cover -x \"**/*.spec.js\" ./node_modules/mocha/bin/_mocha -- js routes",
    "enforcer": "./node_modules/.bin/istanbul check-coverage --statement 100 --branch 100 --function 100 --line 100",
    "build": "npm-run-all test enforcer",
    "postinstall": "test -d .git && cp gitHookPrePush.sh .git/hooks/pre-push || true"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "body-parser": "^1.16.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.1",
    "express-http-proxy": "^0.11.0",
    "express-validation": "^1.0.1",
    "globby": "^6.1.0",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0"
  },
  "devDependencies": {
    "eslint": "^3.16.1"
  },
  "engine": "node >= 6.10.0"
}
